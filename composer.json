{
    "name": "silverstripe/silverstripe-forager-elastic-enterprise",
    "description": "Elastic Enterprise Search Provider for Silverstripe Forager",
    "type": "silverstripe-vendormodule",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "SilverStripe",
            "homepage": "http://silverstripe.com"
        },
        {
            "name": "The SilverStripe Community",
            "homepage": "http://silverstripe.org"
        }
    ],
    "keywords": [
        "Elastic",
        "Enterprise Search",
        "Elastic Enterprise Search",
        "Search",
        "Silverstripe CMS"
    ],
    "require": {
        "php": "^8.1",
        "silverstripe/framework": "^5.1",
        "silverstripe/silverstripe-forager": "dev-feature/synonym-management as 1.1.1",
        "elastic/enterprise-search": "^8.6",
        "guzzlehttp/guzzle": "^7"
    },
    "require-dev": {
        "silverstripe/recipe-testing": "^3",
        "tractorcow/silverstripe-fluent": "^7",
        "slevomat/coding-standard": "~8.8.0"
    },
    "repositories": {
        "silverstripe/silverstripe-forager": {
            "type": "git",
            "url": "https://github.com/silverstripeltd/silverstripe-forager.git"
        }
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\ForagerElasticEnterprise\\": "src/",
            "SilverStripe\\ForagerElasticEnterprise\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true,
            "silverstripe/recipe-plugin": true
        }
    }
}
